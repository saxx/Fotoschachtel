<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xlabs="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="Gruppenfoto.App.StartPage">

  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness" iOS="10,20,10,10" Android="10,10,10,10" />
  </ContentPage.Padding>
  
  <StackLayout>
    <StackLayout VerticalOptions="StartAndExpand">
      <Label>Hier können du und alle anderen Gäste ihre Schnappschüsse zu einem gemeinsamen Event teilen.</Label>
    </StackLayout>
    
    <StackLayout VerticalOptions="End">
      <ActivityIndicator x:Name="ActivityIndicator" IsVisible="False" />
      <xlabs:ImageButton x:Name="CameraButton" Source="camera" HeightRequest="80" ImageHeightRequest="50" ImageWidthRequest="50" Orientation="ImageOnTop" Text="Foto knipsen"/>
      <xlabs:ImageButton x:Name="LibraryButton" Source="picture" HeightRequest="40" ImageHeightRequest="30" ImageWidthRequest="30" Orientation="ImageToLeft" Text="Foto auswählen" />      
    </StackLayout>
  </StackLayout>
</ContentPage>